/* #region OBS Elements */

@OBSThemeMeta {
    dark: 'true';
	id: 'com.asriel.MintChip';
	name: 'MintChip';
    author: 'Asriel Dreemurr (Azi) â™¡';
}

@OBSThemeVars {
	--palette_window: var(--palette_base);
	--palette_base: rgb(32, 39, 47);
	--palette_alternateBase: var(--palette_base);
	--palette_text: rgb(238, 238, 238);
	
	--palette_light: rgb(87, 107, 126);
	--palette_mid: rgb(47, 57, 66);
	--palette_dark: rgb(14, 31, 39);
	--palette_shadow: rgb(9, 22, 30);
	
	--palette_button: var(--palette_mid);
	--palette_highlight: rgb(33, 202, 161);

	--palette_text_disabled: #eeeeee40;
}

	/* #region Icon Overrides */

	OBSBasic {
		qproperty-imageIcon: url(theme:Mintchip/Sources/image.svg);
		qproperty-colorIcon: url(theme:Mintchip/Sources/brush.svg);
		qproperty-slideshowIcon: url(theme:Mintchip/Sources/images.svg);
		qproperty-audioInputIcon: url(theme:Mintchip/Sources/microphone.svg);
		qproperty-audioOutputIcon: url(theme:Mintchip/Sources/sound.svg);
		qproperty-desktopCapIcon: url(theme:Mintchip/Sources/monitor.svg);
		qproperty-windowCapIcon: url(theme:Mintchip/Sources/window.svg);
		qproperty-gameCapIcon: url(theme:Mintchip/Sources/default.svg);
		qproperty-cameraIcon: url(theme:Mintchip/Sources/webcam.svg);
		qproperty-textIcon: url(theme:Mintchip/Sources/text.svg);
		qproperty-mediaIcon: url(theme:Mintchip/Settings/video.svg);
		qproperty-browserIcon: url(theme:Mintchip/Sources/globe.svg);
		qproperty-groupIcon: url(theme:Mintchip/Sources/folder.svg);
		qproperty-sceneIcon: url(theme:Mintchip/Sources/scene.svg);
		qproperty-defaultIcon: url(theme:Mintchip/Sources/default.svg);
		qproperty-windowIcon: url(theme:Mintchip/icon_256x256.png);
		qproperty-trashIcon: url(theme:Mintchip/delete.svg);

		qproperty-dockNestingEnabled: true;
		qproperty-unifiedTitleAndToolBarOnMac: false;
	}

	.icon-plus {
		qproperty-icon: url(theme:Mintchip/plus.svg);
	}

	.icon-minus {
		qproperty-icon: url(theme:Mintchip/minus.svg);
	}

	.icon-trash {
		qproperty-icon: url(theme:Mintchip/delete.svg);
	}

	.icon-clear {
		qproperty-icon: url(theme:Dark/entry-clear.svg);
	}

	.icon-gear {
		qproperty-icon: url(theme:Mintchip/settings/cog.svg);
	}

	.icon-dots-vert {
    	qproperty-icon: url(theme:Mintchip/Controls/dots-vert.svg);
	}

	.icon-dots-vert:hover {
		icon: url(theme:Mintchip/Controls/dots-vert-hover.svg);
	}

	.icon-refresh {
		qproperty-icon: url(theme:Mintchip/refresh.svg);
	}

	.icon-cogs {
		qproperty-icon: url(theme:Mintchip/settings/cog.svg);
	}

	.icon-touch {
		qproperty-icon: url(theme:Dark/interact.svg);
	}

	.icon-up {
		qproperty-icon: url(theme:Mintchip/controls/angle-up.svg);
	}

	.icon-down {
		qproperty-icon: url(theme:Mintchip/controls/angle-down.svg);
	}

	.icon-pause {
		qproperty-icon: url(theme:Mintchip/pause.svg);
	}

	.icon-filter {
		qproperty-icon: url(theme:Mintchip/filter.svg);
	}

	.icon-revert {
		qproperty-icon: url(theme:Mintchip/undo.svg);
	}

	.icon-save {
		qproperty-icon: url(theme:Mintchip/save.svg);
	}

	.icon-media-play {
    	qproperty-icon: url(theme:Mintchip/play.svg);
	}

	.icon-media-pause {
		qproperty-icon: url(theme:Mintchip/pause.svg);
	}

	.icon-media-restart {
		qproperty-icon: url(theme:Mintchip/restart.svg);
	}

	.icon-media-stop {
		qproperty-icon: url(theme:Dark/media/media_stop.svg);
	}

	.icon-media-next {
		qproperty-icon: url(theme:Dark/media/media_next.svg);
	}

	.icon-media-prev {
		qproperty-icon: url(theme:Dark/media/media_previous.svg);
	}

	/* #region Source Indicators */

    .indicator-visibility::indicator:checked {
        image: url(theme:Mintchip/Controls/eye.svg);
    }

    .indicator-visibility::indicator:unchecked {
        image: url(theme:Mintchip/Controls/eye-slash.svg);
    }

    .indicator-visibility::indicator:checked:hover {
        image: url(theme:Mintchip/Controls/eye-hover.svg);
    }

    .indicator-visibility::indicator:unchecked:hover {
        image: url(theme:Mintchip/Controls/eye-slash-hover.svg);
    }

    .indicator-lock::indicator:checked {
        image: url(theme:Mintchip/Controls/locked.svg);
    }

    .indicator-lock::indicator:unchecked {
        image: url(theme:Mintchip/Controls/unlocked.svg);
    }

    .indicator-lock::indicator:checked:hover {
        image: url(theme:Mintchip/Controls/locked-hover.svg);
    }

    .indicator-lock::indicator:unchecked:hover {
        image: url(theme:Mintchip/Controls/unlocked-hover.svg);
    }

/* #endregion */

/* #region Mute Indicator */

    .indicator-mute::indicator:checked {
        image: url(theme:Mintchip/controls/mute.svg);
    }

    .indicator-mute::indicator:indeterminate {
        image: url(theme:Dark/unassigned.svg);
    }

    .indicator-mute::indicator:unchecked {
        image: url(theme:Mintchip/controls/audio.svg);
    }

    .indicator-mute::indicator:unchecked:hover {
        image: url(theme:Mintchip/controls/audio-hover.svg);
    }

    .indicator-mute::indicator:unchecked:focus {
        image: url(theme:Mintchip/controls/audio.svg);
    }

    .indicator-mute::indicator:checked:hover {
        image: url(theme:Mintchip/controls/mute-hover.svg);
    }

    .indicator-mute::indicator:checked:focus {
        image: url(theme:Mintchip/controls/mute.svg);
    }

    .indicator-mute::indicator:checked:disabled {
        image: url(theme:Mintchip/controls/mute.svg);
    }

    .indicator-mute::indicator:unchecked:disabled {
        image: url(theme:Mintchip/controls/audio.svg);
    }

/* #endregion */


	/* #endregion */

/* #endregion */

/* #region Universal Elements */

	/* #region Primary Elements */
	* {
		color: var(--palette_text);
		font-family: "SF Compact Rounded", "Arial Rounded MT", Noto Sans, "Segoe UI", Helvetica, Tahoma, Arial;

		font-weight: bold;
		font-size: 14px;
		
		margin: 0px;
		padding: 0px;
		border: none;
		border-radius: 0px;
		background-color: transparent;
		position: relative;
	}

	*:disabled {
		color: var(--palette_light); /* Disabled Text Color */
	}

	QMainWindow,
	QDialog,
	QWidget {
		background-color: var(--palette_base); /* Window Background */
		alternate-background-color: var(--palette_base);
		selection-background-color: var(--palette_highlight); 
		selection-color: var(--palette_text); 
		outline: none;

		qproperty-windowIcon: url(theme:Mintchip/icon_256x256.png); /* Window Icon */
	}

	QFrame,
	QLabel {
		background-color: transparent;
	}

	QMainWindow {
		padding: 16px;
	}

	/* QWidget::item:hover {
		background-color: var(--palette_mid); 
	} */ /* Hover Background */

	QSizeGrip {
		image: url(theme:Mintchip/Controls/arrow-down-right.svg);
		min-width: 8px;
		min-height: 8px;
		margin: 0px;
	} /* Widget Size Grips */

		/* #region Dock Separators */
			QMainWindow::separator {
				border-radius: 2px;
				background-color: rgba(87, 107, 126, 0.1);
			}

			QMainWindow::separator:vertical {
				width: 6px;
				margin: 16px 2px;
			}

			QMainWindow::separator:horizontal {
				height: 6px;
				margin: 2px 16px;
			}

			QMainWindow::separator:hover {
				background-color: var(--palette_light);
			}
		/* #endregion */

	/* #endregion */

	/* #region Buttons */
		QPushButton,
		QToolButton {
			border-radius: 6px;
			color: var(--palette_text);
			background-color: var(--palette_mid);
		}

		QPushButton {
			padding: 4px 12px;
			min-width: 36px;
			min-height: 24px;
		}
		
		QPushButton:hover,
		QToolButton:hover,
		QTabBar::tab:!selected:hover {
			background: var(--palette_light);
		}

		QPushButton:pressed,
		QToolButton:pressed,
		QPushButton:checked:pressed {
			background: var(--palette_highlight);
		}
	/* #endregion */

	/* #region Docks */
		QDockWidget > QWidget > QWidget {
			padding: 8px 16px;
		}

		QDockWidget {
			background: var(--palette_base);
			min-width: 320px;
		}

		QDockWidget::title {
			background: var(--palette_base);
			padding: 12px 0px 0px 0px;
			margin: 0px;
			subcontrol-position: center center;
		}

		QDockWidget::title:closable {
			margin-left: 8px;
		} /* Fixes Alignment Issue When Closable */

		QDockWidget::title:!movable {
			margin-left: 18px;
		} /* Fixes Alignment Issue When Locked */

		QDockWidget {
			titlebar-close-icon: url(theme:Mintchip/close.svg);
			titlebar-normal-icon: url(theme:Mintchip/window.svg);
		}

		QDockWidget::close-button, QDockWidget::float-button {
			border-radius: 6px;
			background-color: transparent;

			icon-size: 36px;

			min-width: 16px;
			min-height: 16px;
			max-width: 16px;
			max-height: 16px;

			top: -4px;
		}

		QDockWidget::float-button {
			subcontrol-position: right center;
			right: 24px;
			padding: 5px;
		}

		QDockWidget::close-button {
			subcontrol-position: left center;
			left: 16px;
			padding: 4px;
			margin-right: 16px;
		}

		QDockWidget::close-button:hover, QDockWidget::float-button:hover {
			background-color: var(--palette_mid);
		}

		QDockWidget::close-button:pressed, QDockWidget::float-button:pressed {
			padding: 1px -1px -1px 1px;
			background-color: var(--palette_mid);
		}
	/* #endregion */

	/* #region Lists */
		QListWidget, QListWidget > *, QListWidget::item {
			background-color: var(--palette_shadow);
			border-radius: 6px;
			padding: 8px;
		}

		/* QListWidget * {
			background-color: var(--palette_shadow);
		} */

		QListWidget::item {
			margin-bottom: 4px;
			min-height: 26px;
			margin-right: 8px;
		}



		QListWidget::item:selected {
			background-color: var(--palette_dark);
		}

		QListWidget::item:hover,
		QListWidget::item:disabled:hover,
		QListWidget::item:hover:!active {
			background-color: var(--palette_mid);
		}

		.QVBoxLayout {
			background: var(--palette_shadow);
			border-radius: 6px;
		}
	/*#endregion*/

	/* #region Menus */
		QMenuBar::item {
			background: var(--palette_base);
			padding: 4px;
			margin-right: 4px;
		}

		QMenuBar::item:selected {
			background-color: var(--palette_highlight);
			color: var(--palette_shadow);
			border-radius: 4px;
		}

		QMenuBar::item:pressed {
			border: none;
			background-color: rgb(163, 255, 231);
			margin-bottom: -1px;
			padding-bottom: 1px;
			color: var(--palette_shadow);
		}

		QMenu {
			padding: 8px;
			background: rgba(32, 39, 47, 0.99);
			border-radius: 6px;
		}

		QMenu::item {
			padding: 6px 8px;
			padding-right: 16px;
		}

		QMenu::indicator {
			padding-left: 8px;
			width: 14px;
			height: 14px;
		}

		QMenu::separator {
			background-color: rgba(47, 57, 66, 0.75);
			border-radius: 1px;
			height: 2px;
			margin: 6px;
		}

		QMenu::item:selected {
			background-color: var(--palette_mid);
			border-radius: 4px;
		}

		QMenu::indicator:non-exclusive:unchecked {
		image: url(theme:Mintchip/Controls/square.svg);
		}

		QMenu::indicator:non-exclusive:unchecked:selected {
		image: url(theme:Mintchip/Controls/square-hover.svg);
		}

		QMenu::indicator:non-exclusive:checked {
		image: url(theme:Mintchip/Controls/square-full.svg);
		}

		QMenu::indicator:non-exclusive:checked:selected {
		image: url(theme:Mintchip/Controls/square-full-hover.svg);
		}
	/* #endregion */

	/* #region Scrollbars */
		QScrollBar {
			border-radius: 8px;
			background-color: rgb(6, 15, 19);
		}

		QScrollBar::up-arrow,
		QScrollBar::down-arrow,
		QScrollBar::add-page {
			background: none;
		}

		QScrollBar::handle {
			background-color: var(--palette_mid);
			min-width: 3px;
			min-height: 3px;
			margin: 3px;
			border-radius: 5px;
			width: 10px;
			height: 10px;
			padding: 0px;
		}

		QScrollBar::handle:hover {
			background-color: var(--palette_light);
		}

		QAbstractScrollArea::corner {
			width: 12px;
			height: 12px;
			margin: 2px;
			border: none;
			border-radius: 6px;
			background-color: rgb(6, 15, 19);
		}

		QScrollBar:horizontal {
			height: 16px;
		}

		QScrollBar:vertical {
			width: 16px;
		}

		QScrollBar::add-page,
		QScrollBar::sub-page {
			background-color: transparent;
		}

		QScrollBar::add-line:horizontal,
		QScrollBar::sub-line:horizontal,
		QScrollBar::add-line:horizontal:hover,
		QScrollBar::add-line:horizontal:on,
		QScrollBar::sub-line:horizontal:hover,
		QScrollBar::sub-line:horizontal:on,
		QScrollBar::add-line:vertical,
		QScrollBar::sub-line:vertical,
		QScrollBar::add-line:vertical:hover,
		QScrollBar::add-line:vertical:on,
		QScrollBar::sub-line:vertical:hover,
		QScrollBar::sub-line:vertical:on {
			margin: 0px;
			border-image: none;
			height: 0px;
			width: 0px;
		}

		QScrollBar::add-line:horizontal,
		QScrollBar::add-line:horizontal:hover,
		QScrollBar::add-line:horizontal:on {
			subcontrol-position: right;
			subcontrol-origin: margin;
		}

		QScrollBar::sub-line:horizontal,
		QScrollBar::sub-line:horizontal:hover,
		QScrollBar::sub-line:horizontal:on {
			subcontrol-position: left;
			subcontrol-origin: margin;
		}

		QScrollBar::sub-line:vertical,
		QScrollBar::sub-line:vertical:hover,
		QScrollBar::sub-line:vertical:on {
			subcontrol-position: top;
			subcontrol-origin: margin;
		}

		QScrollBar::add-line:vertical,
		QScrollBar::add-line:vertical:hover,
		QScrollBar::add-line:vertical:on {
			subcontrol-position: bottom;
			subcontrol-origin: margin;
		}
	/* #endregion */

	/* #region Tabs */
		QTabWidget::pane {
			border: none;
			border-radius: 0px;
			padding: 8px;
			background-color: transparent;
		}

		QTabWidget::tab-bar {
			top: 8px;
			border: none;
			background-color: transparent;
		}

		QTabBar {
			border-radius: 0px;
		}

		QTabBar::close-button {
			image: url(theme:Mintchip/close.svg);
			background: transparent;
		}

		QTabBar::close-button:hover {
			background: var(--palette_mid);
		}

		QTabBar::close-button:pressed {
			image: url(theme:Mintchip/close.svg);
			background: var(--palette_light);
		}

		QTabBar::tab {
			background-color: var(--palette_highlight);
			color: var(--palette_shadow); 
			border-radius: 4px;
			margin: 2px;
			padding: 8px;
			min-width: 50px;
		}

		QTabBar::tab:!selected {
			background-color: var(--palette_mid);
			color: var(--palette_text);
		}
	/* #endregion */

	/* #region Toolbars */
		QToolBar {
			background-color: var(--palette_shadow);
			border-radius: 6px;
			margin: 8px 0px 0px 0px;
			min-height: 48px;
			max-height: 48px;
		}

		QToolBar > QToolButton {
			subcontrol-position: left top;
			padding: 4px;
			margin: 8px 4px 0px 0px;
			min-height: 16px;
			min-width: 16px;
		}

		QToolBar::separator {
			border: none;
			background-color: rgba(47, 57, 66, 0.5);
			border-radius: 1px;
			height: 2px;
			width: 2px;
			margin: 8px 4px 0px 0px;
		}
	/* #endregion */

	/* #region Spinboxes */
		QAbstractSpinBox {
			padding: 8px;
			border: 0px solid var(--palette_light);/* Light Gray */
			background-color: var(--palette_shadow);
			color: var(--palette_text); /* White */
			border-radius: 6px;
			min-width: 75px;
		}

		QAbstractSpinBox:up-button {
			background-color: transparent;
			subcontrol-origin: border;
			subcontrol-position: top right;
			margin-right: 4px;
		}

		QAbstractSpinBox:down-button {
			background-color: transparent;
			subcontrol-origin: border;
			subcontrol-position: bottom right;
			margin-right: 4px;
		}

		QAbstractSpinBox::up-arrow,
		QAbstractSpinBox::up-arrow:disabled,
		QAbstractSpinBox::up-arrow:off {
			image: url(theme:Mintchip/Controls/angle-up-disabled.svg);
			width: 16px;
			height: 16px;
		}

		QAbstractSpinBox::up-arrow:hover {
			image: url(theme:Mintchip/Controls/angle-up.svg);
		}

		QAbstractSpinBox::down-arrow,
		QAbstractSpinBox::down-arrow:disabled,
		QAbstractSpinBox::down-arrow:off {
			image: url(theme:Mintchip/Controls/angle-down-disabled.svg);
			width: 16px;
			height: 16px;
		}

		QAbstractSpinBox::down-arrow:hover {
			image: url(theme:Mintchip/Controls/angle-down.svg);
		}
	/* #endregion */

	/* #region Textboxes */
		QLineEdit {
			background-color: var(--palette_shadow);
			padding: 8px;
			border: 0px solid var(--palette_light);
			border-radius: 6px;
			min-height: 16px;
		}

		QLineEdit:focus {
			color: white;
		}

		QListWidget QLineEdit {
			padding-top: 0;
			padding-bottom: 0;
			padding-right: 0;
			padding-left: 2px;
			border: none;
			border-radius: none;
		}
	/* #endregion */

	/* #region Checkboxes */
		QCheckBox {
			spacing: 5px;
			outline: none;
			color: var(--palette_text);
			margin-bottom: 2px;
			padding: 4px;
			border-radius: 6px;
			min-height: 26px;
		}

		QCheckBox:hover, QCheckBox:focus {
			color: var(--palette_text);
			background-color: rgba(9, 22, 30,0.5);
		}

		QCheckBox:disabled {
			color: var(--palette_light);
		}

		QCheckBox::indicator,
		QGroupBox::indicator {
			width: 18px;
			height: 18px;
		}

		QGroupBox::indicator {
			margin-left: 2px;
		}

		QCheckBox::indicator:unchecked {
			image: url(theme:Mintchip/Controls/square.svg);
		}

		QCheckBox::indicator:unchecked:hover,
		QGroupBox::indicator:unchecked:hover {
			border: none;
			image: url(theme:Mintchip/Controls/square-hover.svg);
		}

		QCheckBox::indicator:checked {
			image: url(theme:Mintchip/Controls/square-full.svg);
		}

		QCheckBox::indicator:checked:hover,
		QGroupBox::indicator:checked:hover {
			border: none;
			image: url(theme:Mintchip/Controls/square-full-hover.svg);
		}

		QCheckBox::indicator:checked:disabled,
		QGroupBox::indicator:checked:disabled {
			image: url(theme:Mintchip/Controls/square-full-disabled.svg);
		}

		QCheckBox::indicator:unchecked:disabled,
		QGroupBox::indicator:unchecked:disabled {
			image: url(theme:Mintchip/Controls/square-disabled.svg);
		}
	/* #endregion */

	/* #region Radio Buttons */
		QRadioButton {
			spacing: 5px;
			outline: none;
			color: var(--palette_text);
			margin-bottom: 2px;
			padding: 4px;
			border-radius: 6px;
			min-height: 26px;
		}

		QRadioButton:disabled {
			color: var(--palette_light);
		}

		QRadioButton::indicator {
			width: 18px;
			height: 18px;
		}

		QRadioButton::indicator:unchecked {
			image: url(theme:Mintchip/Controls/circle.svg);
		}


		QRadioButton::indicator:unchecked:hover,
		QRadioButton::indicator:unchecked:focus,
		QRadioButton::indicator:unchecked:pressed {
			border: none;
			outline: none;
			image: url(theme:Mintchip/Controls/circle-hover.svg);
		}

		QRadioButton::indicator:checked {
			border: none;
			outline: none;
			image: url(theme:Mintchip/Controls/circle-full.svg);
		}

		QRadioButton::indicator:checked:hover,
		QRadioButton::indicator:checked:focus,
		QRadioButton::indicator:checked:pressed {
			border: none;
			outline: none;
			image: url(theme:Mintchip/Controls/circle-full-hover.svg);
		}

		QRadioButton::indicator:checked:disabled {
			outline: none;
			image: url(theme:Mintchip/Controls/circle-full-disabled.svg);
		}

		QRadioButton::indicator:unchecked:disabled {
			image: url(theme:Mintchip/Controls/circle-disabled.svg);
		}
	/* #endregion */

	/* #region Progress Bars */
		QProgressBar {
			border: 2px solid var(--palette_mid);
			border-radius: 4px;
			text-align: center;
		}

		QProgressBar::chunk {
			background-color: rgb(47, 194, 162);
		}
